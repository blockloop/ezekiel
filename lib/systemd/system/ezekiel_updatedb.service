[Unit]
Description=Thermocouple Probe Updater Service
After=syslog.target

[Service]
Type=oneshot
User=pi
Environment=API_USER=pi
Environment=API_PASS=***REMOVED***
Environment=API_HOST=https://ezekiel.dokku.blockloop.io
WorkingDirectory=/home/pi/ezekiel_reader
ExecStart=/usr/bin/python /home/pi/ezekiel_reader/update_db.py
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target
